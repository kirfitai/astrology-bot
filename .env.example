# Токены API
TELEGRAM_TOKEN=your_telegram_token_here
OPENAI_API_KEY=your_openai_api_key_here

# Настройки администратора
ADMIN_USERNAME=admin
ADMIN_PASSWORD=adminparol
ADMIN_TELEGRAM_ID=your_telegram_id_here
PREMIUM_CHANNEL_ID=@your_premium_channel_id  # ID канала с @, например @astrology_premium

# Настройки базы данных
DB_FILE=astrology_bot.db

# Настройки OpenAI
OPENAI_MODEL=gpt-4o
MAX_TOKENS=2000
COST_PER_1000_TOKENS=0.002

# Настройки диалога
MAX_MESSAGES=10

# Настройки подписок
FREE_MESSAGES_LIMIT=3
PRICE_1_MONTH=4.99
PRICE_3_MONTH=9.99
PRICE_1_YEAR=29.99

# Настройки гороскопа
DEFAULT_HOROSCOPE_TIME=08:00

# Путь к ephemeris
EPHE_PATH=ephemeris/

# Настройки логирования
LOG_LEVEL=INFO
LOG_DIR=logs

# Настройки административной панели
ADMIN_PORT=8080

# Настройки отчетов об ошибках
ERROR_REPORT_THRESHOLD=5

# Настройки платежей
TRIBUTE_API_KEY=your_tribute_api_key_here
TRIBUTE_SECRET_KEY=your_tribute_secret_key_here
TRIBUTE_PROJECT_ID=your_tribute_project_id_here
TG_STARS_MULTIPLIER=100